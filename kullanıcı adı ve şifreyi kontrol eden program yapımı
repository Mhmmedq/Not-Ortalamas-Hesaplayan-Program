        System.out.print("sifreniz ");
        password = scr.nextLine();

        if (username.equals(usr) && password.equals(pss)) {
            System.out.println("giris yaptiniz");

        } else {
            System.out.println("sifreniz hatalidir ");
            System.out.println("sifrlamak isterniz evet YAZINIZ");
